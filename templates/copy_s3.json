{
  "name": "pl_s3_to_lakehouse_bronze",
  "type": "Copy",
  "properties": {
    "source": {
      "type": "AmazonS3",
      "connection": "lc_s3_raw",
      "path": "s3://bucket/path/customers/*.csv"
    },
    "sink": {
      "type": "Lakehouse",
      "connection": "lh_sales_core",
      "schema": "erp_replication",
      "table": "customers_raw",
      "format": "delta",
      "writeMode": "append"
    },
    "formatSettings": { "csv": { "headerRow": true } }
  }
}
